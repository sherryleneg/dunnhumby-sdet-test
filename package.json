{
  "scripts": {
    "cy:open": "cypress open",
    "cy:e2e": "./node_modules/.bin/cypress run --spec \"cypress/integration/ui/*\" --browser chrome --headless",
    "cy:api": "./node_modules/.bin/cypress run --spec \"cypress/integration/api/*'\" --browser chrome --headless",
    "cy:all": "./node_modules/.bin/cypress run --browser chrome --headless",
    "cy:lint": "prettier --check '**/*.ts' && eslint . --ext .ts",
    "cy:format": "prettier --write '**/*.ts'"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "cypress": "^6.0.0",
    "eslint": "^7.14.0",
    "eslint-plugin-cypress": "^2.11.2",
    "prettier": "2.2.1",
    "typescript": "^4.1.2"
  }
}
